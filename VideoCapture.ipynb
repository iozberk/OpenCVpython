    "# OpenCV Live Video Capture - Python"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import cv2 as cv\n",
    "\n",
    "# Live Video Capture\n",
    "\n",
    "camera = cv.VideoCapture(0)\n",
    "\n",
    "while True:\n",
    "    ret,video = camera.read()\n",
    "    cv.imshow(\"Live Video: \",video)\n",
    "    if cv.waitKey(24) & 0xFF ==' q ':\n",
    "        break\n",
    "camera.release()\n",
    "cv2.destroyAllWindows()"
   ]
